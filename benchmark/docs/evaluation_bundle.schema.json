{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "smi-bench:evaluation_bundle:v1",
  "title": "SMI Benchmark Evaluation Bundle",
  "type": "object",
  "required": [
    "schema_version",
    "spec_url",
    "benchmark",
    "run_id",
    "exit_code",
    "timings",
    "config",
    "metrics",
    "errors",
    "artifacts"
  ],
  "properties": {
    "schema_version": {"type": "integer", "const": 1},
    "spec_url": {"type": "string"},
    "benchmark": {"type": "string"},
    "run_id": {"type": "string"},
    "exit_code": {"type": "integer"},
    "timings": {
      "type": "object",
      "required": ["started_at_unix_seconds", "finished_at_unix_seconds", "elapsed_seconds"],
      "properties": {
        "started_at_unix_seconds": {"type": "integer"},
        "finished_at_unix_seconds": {"type": "integer"},
        "elapsed_seconds": {"type": "number"}
      },
      "additionalProperties": true
    },
    "config": {"type": "object", "additionalProperties": true},
    "metrics": {"type": "object", "additionalProperties": true},
    "errors": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "package_id": {"type": ["string", "null"]},
          "error": {"type": ["string", "null"]},
          "timed_out": {"type": ["boolean", "null"]},
          "elapsed_seconds": {"type": ["number", "null"]},
          "plan_attempts": {"type": ["integer", "null"]},
          "sim_attempts": {"type": ["integer", "null"]},
          "score": {"type": "object", "additionalProperties": true}
        },
        "additionalProperties": true
      }
    },
    "artifacts": {
      "type": "object",
      "required": ["results_path", "run_metadata_path", "events_path"],
      "properties": {
        "results_path": {"type": "string"},
        "run_metadata_path": {"type": "string"},
        "events_path": {"type": "string"}
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": true
}
